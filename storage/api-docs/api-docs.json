{
    "openapi": "3.0.0",
    "info": {
        "title": "Massage Booking System API",
        "description": "Massage Booking System available endpoints list",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "/api",
            "description": "Local server"
        }
    ],
    "paths": {
        "/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Provides a JWT token by email and password credentials",
                "operationId": "8cb7742ae98d0990acb2907c4e00bf24",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "allOf": [
                                    {
                                        "$ref": "#/components/schemas/LoginRequest"
                                    }
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Logged in"
                    }
                }
            }
        },
        "/schedules": {
            "get": {
                "tags": [
                    "Schedules"
                ],
                "summary": "Get available schedules for user",
                "operationId": "4e2227c2b64bbd8bb2b496a48855e5c4",
                "responses": {
                    "200": {
                        "description": "Return filtered schedule list"
                    },
                    "401": {
                        "description": "Unatuhorized"
                    },
                    "500": {
                        "description": "Internal server error!"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Schedules"
                ],
                "summary": "Get schedules list with filters",
                "operationId": "a2978f187f401d890a6813ff295bbeab",
                "responses": {
                    "200": {
                        "description": "Return filtered rating list"
                    },
                    "422": {
                        "description": "Unprocessable entity!"
                    },
                    "500": {
                        "description": "Internal server error!"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/services": {
            "get": {
                "tags": [
                    "Services"
                ],
                "summary": "Get rating list with filters",
                "operationId": "96950feb4aaa0ea9dd7db3b3838bd669",
                "responses": {
                    "200": {
                        "description": "Return filtered rating list"
                    },
                    "422": {
                        "description": "Unprocessable entity!"
                    },
                    "500": {
                        "description": "Internal server error!"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "LoginRequest": {
                "title": "LoginRequest",
                "description": "Register a non exisiting user",
                "required": [
                    "email",
                    "password"
                ],
                "properties": {
                    "email": {
                        "description": "User's email address",
                        "example": "general.user@teszt.com"
                    },
                    "password": {
                        "description": "User's password",
                        "example": "Teszt123"
                    }
                },
                "type": "object"
            }
        },
        "requestBodies": {
            "BookScheduleRequest": {
                "description": "Book a schedule slot",
                "required": true,
                "content": {
                    "application/json": {
                        "schema": {
                            "required": [
                                "serviceId",
                                "from"
                            ],
                            "properties": {
                                "serviceId": {
                                    "type": "integer",
                                    "example": 1
                                },
                                "from": {
                                    "type": "string",
                                    "format": "time",
                                    "example": "14:00"
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            }
        }
    }
}